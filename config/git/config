
[core]
  repositoryformatversion = 0
  filemode = true
  bare = false
  logallrefupdates = true

[remote "origin"]
  fetch = +refs/heads/*:refs/remotes/origin/*
  url = git@github.com:lcgoron/mcs.git

[branch "master"]
  remote = origin
  merge = refs/heads/master
  rebase = true

[user]
  email = lucian.goron@gmail.com
  name = Lucian Cosmin Goron

[push]
  default = current

# [alias]
  # st = status
  # ci = commit
  # br = branch
  # co = checkout
  # df = diff
  # lg = log -p

[alias]
  a = add
  s = status
  c = commit
  b = branch
  d = diff
  l = log

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

